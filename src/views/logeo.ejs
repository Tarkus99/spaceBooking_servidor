<% layout('main') -%>
<h1 class="mt-3">Log in</h1>
<form action="/auth/login" method="post">
    <input class="border" type="text" name="username" placeholder="Insert username">
    <input class="border" type="password" name="password" placeholder="Insert password">
    <button class="bg-cyan-600 py-2 px-4 rounded" type="submit">Sign up</button>
</form>
<h1 class="mt-3">Sign up</h1>
<form action="/auth/signup" method="post">
    <input class="border" type="text" name="name" placeholder="Insert complete name">
    <input class="border" type="text" name="username" placeholder="Insert username">
    <input class="border" type="password" name="password" placeholder="Insert password">
    <input type="time" name="time">
    <button class="bg-cyan-600 py-2 px-4 rounded" type="submit">Sign up</button>
</form>

<%= message %>
<%= m %>